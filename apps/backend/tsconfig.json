{
    "compilerOptions": {
        "target": "es2022",
        "module": "Preserve",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "outDir": "dist",
        "resolveJsonModule": true,
        "paths": {
            "$aa/*": ["../antalmanac/*"],
            "$db/*": ["./src/db/*"],
            "$models/*": ["./src/models/*"],
            "$generated/*": ["./src/generated/*"]
        }
    },
    "include": ["src/**/*", "scripts/**/*.ts", "drizzle.config.ts"],
    "exclude": ["node_modules", "dist"]
}
